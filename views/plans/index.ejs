<section class="container">
  <form class="form-horizontal">
    <div class="form-group" id="plans">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h3>All Plans:</h3>
        <a href="/plans/new" class="btn btn-primary">Create a new plan</a>
          <% if (typeof(plans) !== 'undefined') { %>
              <% plans.forEach((plan) => { %>
                  <div class="panel panel-default">
                      <div class="panel-heading">
                          <p><a href="/users/idfromcreator"><strong>@idfromcreator</strong></a> 
                          <p><%= plan.title %></p>
                          <img src="<%=plan.imgUrl%>" alt="" height="100px">
                          <p class="text-right">
                              <a href="/plans/<%= plan._id %>" class="btn btn-success text-right ">Edit</a>
                          </p>
                      </div>
                  </div>
              <% }); %>
          <% } %>
      </div>
    </div>
  </form>
</section>